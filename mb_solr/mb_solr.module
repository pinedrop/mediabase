/**
 * Function to return results of a search for Ajax calls
 */
function mb_solr_ajax_search() {
  // Default Options
  $options = array(
    'query' => '',
    'type' => 'core_search', // this is apachesolr page id: core_search = regular search, transcripts = search in transcripts
  );
  $options = array_merge($options, $_GET); // named parameters are the options, 2nd array gets precedence in a merge
  
  // TODO: create ability to search across both descriptions and transcripts  
  // Load Apache Search Page Results for Query and Render
  module_load_include('inc','apachesolr', 'apachesolr_search.pages');
  $page = apachesolr_search_custom_page($options['type'], 'company');
  $html = '<div id="ajax-search-results">' . render($page) . '</div>';
  // Create out array of options plus html results
  $out = $options;
  $out['html'] = $html;
  // Change Drupals standard q parameter to the relative path and remove from array
  $out['path'] = $out['q'];
  unset($out['q']);
  // Output JSON
  drupal_json_output($out);
}

/**
 * Called by hook_menu (services/facets/%) from an ajax call initiated by clicking on Fancy Tree facet
 * Returns an ajax render array
 */
function mb_solr_facets_ajax($facets) {
	$commands = array();
  $facet_pairs = explode('::', $facets);
	list($results_html, $fnames) = mb_solr_do_facet_search($facet_pairs); // Do The Search
	// Mark it up
	$solrhtml = '<article class="tab-pane main-col active" id="tab-overview"><div class="region region-content"><div class="content">';
	if(empty($results_html)) {
		$solrhtml .= t('<p>Sorry, this search returned no results.</p>');
	} else {
		$solrhtml .= mb_solr_process_ajax_paging($results_html); // Enable links for ajax processing
	}
	$solrhtml .= '</div></div></article>';
	
	// Build & Return Ajax render array
  $commands[] = ajax_command_replace('#tab-overview', $solrhtml);
	
	// If results do facets
	if(!empty($results_html)) {
		// Create a facet count array to be added to Mediabase JS settings in Drupal. Used by mb_solr.js to update facet counts in tree.
		$facetcounts = array();
		foreach($fnames as $fn => $facet) {
			$facet_list = mb_solr_process_facet_list($facet['#items']);
			$facetcounts[$fn] = $facet_list;
		}
		$commands[] = ajax_command_settings(array('mediabase' => array('facets' => $facets, 'facetcounts' => $facetcounts)), TRUE);
		$commands[] = ajax_command_invoke('.kmaps-tree', "updateFacetTree", array('data' => $facets));
	} else {
		$commands[] = ajax_command_invoke('.kmaps-tree', "clearFacetTree");
	}
  
  $ajax = array('#type' => 'ajax', '#commands' => $commands);
	return $ajax;
}

